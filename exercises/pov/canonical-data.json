                  {
                    "label": "level-2",
                    "children": [
                      {
                        "label": "level-1",
                        "children": [
                          {
                            "label": "level-0"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        },
        {
          "uuid": "e27fa4fa-648d-44cd-90af-d64a13d95e06",
          "description": "Moves children of the new root to same level as former parent",
          "property": "fromPov",
          "input": {
            "tree": {
              "label": "parent",
              "children": [
                {
                  "label": "x",
                  "children": [
                    {
                      "label": "kid-0"
                    },
                    {
                      "label": "kid-1"
                    }
                  ]
                }
              ]
            },
            "from": "x"
          },
          "expected": {
            "label": "x",
