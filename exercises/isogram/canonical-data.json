      "property": "isIsogram",
      "input": {
        "phrase": "accentor"
      },
      "expected": false
    },
    {
      "uuid": "310ac53d-8932-47bc-bbb4-b2b94f25a83e",
      "description": "same first and last characters",
      "property": "isIsogram",
      "input": {
        "phrase": "angola"
      },
      "expected": false
    },
    {
      "uuid": "0d0b8644-0a1e-4a31-a432-2b3ee270d847",
