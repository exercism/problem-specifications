{
  "exercise": "binary",
  "version": "1.1.0",
  "cases": [
    {
      "description": "binary 0 is decimal 0",
      "property": "decimal",
      "input": {
        "binary": "0"
      },
      "expected": 0
    },
    {
      "description": "binary 1 is decimal 1",
      "property": "decimal",
      "input": {
        "binary": "1"
      },
      "expected": 1
    },
    {
      "description": "binary 10 is decimal 2",
      "property": "decimal",
      "input": {
        "binary": "10"
      },
      "expected": 2
    },
    {
      "description": "binary 11 is decimal 3",
      "property": "decimal",
      "input": {
        "binary": "11"
      },
      "expected": 3
    },
    {
      "description": "binary 100 is decimal 4",
      "property": "decimal",
      "input": {
        "binary": "100"
      },
      "expected": 4
    },
    {
      "description": "binary 1001 is decimal 9",
      "property": "decimal",
      "input": {
        "binary": "1001"
      },
      "expected": 9
    },
    {
      "description": "binary 11010 is decimal 26",
      "property": "decimal",
      "input": {
        "binary": "11010"
      },
      "expected": 26
    },
    {
      "description": "binary 10001101000 is decimal 1128",
      "property": "decimal",
      "input": {
        "binary": "10001101000"
      },
      "expected": 1128
    },
    {
      "description": "binary ignores leading zeros",
      "property": "decimal",
      "input": {
        "binary": "000011111"
      },
      "expected": 31
    },
    {
      "description": "2 is not a valid binary digit",
      "property": "decimal",
      "input": {
        "binary": "2"
      },
      "expected": null
    },
    {
      "description": "a number containing a non-binary digit is invalid",
      "property": "decimal",
      "input": {
        "binary": "01201"
      },
      "expected": null
    },
    {
      "description": "a number with trailing non-binary characters is invalid",
      "property": "decimal",
      "input": {
        "binary": "10nope"
      },
      "expected": null
    },
    {
      "description": "a number with leading non-binary characters is invalid",
      "property": "decimal",
      "input": {
        "binary": "nope10"
      },
      "expected": null
    },
    {
      "description": "a number with internal non-binary characters is invalid",
      "property": "decimal",
      "input": {
        "binary": "10nope10"
      },
      "expected": null
    },
    {
      "description": "a number and a word whitespace separated is invalid",
      "property": "decimal",
      "input": {
        "binary": "001 nope"
      },
      "expected": null
    }
  ]
}
