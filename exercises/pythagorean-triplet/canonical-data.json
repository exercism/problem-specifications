      "property": "tripletsWithSum",
      "input": {
        "n": 12
      },
      "expected": [[3, 4, 5]]
    },
    {
      "description": "triplets whose sum is 108",
      "property": "tripletsWithSum",
      "input": {
        "n": 108
      },
      "expected": [[27, 36, 45]]
